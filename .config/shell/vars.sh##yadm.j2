#!/usr/bin/env sh

export PATH="${HOME}/.local/bin:${PATH}"

export CLICOLOR=1
export EDITOR=vim
export GPG_TTY=$(tty)
export GREP_COLOR="01;34"
export GREP_COLORS="mt=$GREP_COLOR"
export HTTPIE_CONFIG_DIR=${HOME}/.config/httpie

# virtualenvwrapper
export WORKON_HOME=${HOME}/.virtualenvs
export PROJECT_HOME=${HOME}/dev
source /usr/local/bin/virtualenvwrapper.sh

# -F -X is cool because then less exists and persists content when it fits on one screen
# It's not cool however, because it persists content when it fills the entire screen
export LESS='-g -i -M -R -S -w -z-4'

export PROJECT_HOME=$HOME/dev
export VISUAL=$EDITOR
export MANPATH=${HOME}/.local/share/man:$(manpath)

eval "$(dircolors ~/.config/dircolors.txt)"

{% if YADM_OS == 'Darwin' -%}
COREUTILS_PATH=$(brew --prefix)/opt/coreutils
export PATH="$COREUTILS_PATH/libexec/gnubin:$PATH"
export MANPATH="$COREUTILS_PATH/libexec/gnuman:$(man -w)"
{% endif -%}
