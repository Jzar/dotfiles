#!/usr/bin/env sh

# Remember that `vars.sh` is autogenerated

path=(
    {% if YADM_OS == 'Darwin' -%}
    $(brew --prefix)/opt/coreutils
    $(brew --prefix)/opt/coreutils/libexec/gnuman
    {% endif -%}
    $HOME/.local/bin
    $HOME/go/bin
    $path
)

export SHELL="$(which zsh)"
export TERM="xterm-256color"

export CLICOLOR=1
export EDITOR=vim
export GPG_TTY=$(tty)
export GREP_COLOR="01;34"
export GREP_COLORS="mt=$GREP_COLOR"
export VISUAL=$EDITOR

# -F -X is cool because then less exists and persists content when it fits on one screen
# It's not cool however, because it persists content when it fills the entire screen
export LESS='-g -i -M -R -S -w -z-4'

if command -v manpath >/dev/null 2>&1; then
    manpath[1,0]="$XDG_DATA_HOME/man"
fi

eval "$(dircolors $XDG_CONFIG_HOME/dircolors/config.txt)"

