set nocompatible
filetype off

syntax enable
set background=dark

set nu
set ruler
set whichwrap+=<,>,h,l

set ignorecase
set smartcase
set hlsearch
set incsearch

set showmatch
set mat=2

set backup
set writebackup
set swapfile
set backupdir=~/.vim/backup
set directory=~/.vim/backup
set undodir=~/.vim/undodir
set undofile

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smartindent
set autoindent

nnoremap <F3> :set expandtab!<CR>
nnoremap <F4> :set number!<CR>
