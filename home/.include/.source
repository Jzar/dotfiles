# Run personal setup scripts

# Setup vars
CURR_SHELL=$(ps ch -o command $$ | grep -iv command)
INCLUDE_DIR=$(dirname $(readlink -f "$0"))

# Set options
if [ $CURR_SHELL = zsh ]; then
    setopt no_dot_glob
else
    shopt -u dotglob
fi

# Source scripts
for file in $INCLUDE_DIR/*; do
    source $file
done
